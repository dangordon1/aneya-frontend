# Test Dockerfile for ScrapeOps proxy testing on Cloud Run
FROM --platform=linux/amd64 python:3.12-slim

ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

WORKDIR /app

# Install minimal dependencies
RUN pip install --no-cache-dir fastapi uvicorn requests

# Copy test script
COPY test_cloudrun_proxy.py .

EXPOSE 8080

CMD ["uvicorn", "test_cloudrun_proxy:app", "--host", "0.0.0.0", "--port", "8080"]
